<view>
	<!-- 左侧导航栏 -->
	<van-row>
		<van-col span="8">
			<van-sidebar active-key="{{ currentIndex }}" bind:change="handleItemTap">
				<van-sidebar-item wx:for="{{leftMenuList}}" wx:key="*this" title="{{item}}" />
			</van-sidebar>
		</van-col>

		<!-- 右侧商品栏 -->
		<van-col span="16">
			<view class="goods_group" wx:for="{{rightContent}}" wx:for-index="index1" wx:for-item="item1" wx:key="index1">

				<van-row>
					<van-col span="24">
						<view class="goods_title">
							<text class="delimiter">/</text>
							<text class="title">{{item1.cat_name}}</text>
							<text class="delimiter">/</text>
						</view>
					</van-col>
					<van-col span="24">
						<van-grid column-num="3" border="{{false}}">
							<van-grid-item use-slot wx:for="{{item1.children}}" wx:key="cat_id" url="/pages/goods_list/index?cid={{item.cat_id}}">
								<image mode="widthFix" src="{{item.cat_icon}}" />
							</van-grid-item>
						</van-grid>
					</van-col>
				</van-row>
			</view>
		</van-col>
	</van-row>
</view>